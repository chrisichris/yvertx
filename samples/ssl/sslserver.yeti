module ssl.sslserver;

load yeb.yvertx;

verticle do :
    _ = (createAndConnectNetServer do socket:
        dataHandler socket do buffer:
            _ = socket#write(buffer);
        done;
    done)#setSSL(true)
         #setKeyStorePath("server-keystore.jks")
         #setKeyStorePassword("wibble")
         #listen(1234);
    \();
done;
