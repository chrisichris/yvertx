"timer:periodic" : do rs:
    rs.setTimeout 5000;
    numFires = 20;
    delay = 100;
    var count = 0;
    _ = setPeriodic delay do timerId:
        count := count + 1;
        if count == numFires then
            _ = cancelTimer timerId;
            _ = setTimer 10 do:
                rs.assure "" true;
            done;
        fi;
        if count > numFires then
            rs.assert "Fired too many times" false;
        fi
    done;
done,

