"promise:parallel" : do rs:
    //make services 
    adresses = [1..10] |> map (("adr"^) . string);
    for adresses do adr:
        _ = registerBusHandler (Global adr) do {reply, handlerId}:
            reply {value = 1, 
                   for_json=E()};
            _ = unregisterBusHandler handlerId;
        done
    done;
    handlers = adresses |> map do adr:
        busRequest adr emptyJS 
        |>bind do {stru = body} : 
            return body.value 
        done;
    done;
    parallel handlers >>- maybe () do res:
        rs.assure "\(res)" (10 == fold (+) 0 res);
    done
done,

"promise:colllectPromise" : do rs:
    println "\n\n*********************************************\n";
    register adr =
        (_ = registerBusHandler (Global adr) do {reply, handlerId} :
            println "***** msg \(adr)";
            reply {value = adr ^ "foo", for_json=E()};
            _ = unregisterBusHandler handlerId;
        done);
    
    for [1..2] (register . ("adr"^) . string);

    cfn = collectPromises do s:{
         a = setProm s
            (busRequest "adr1" emptyJS |> bind do {stru = js}:
                println "**** value \(js.value)";
                return js.value
            done),
         b = setProm s
            (busRequest "adr2" emptyJS |> bind do {stru = js}:
                println "**** value2 \(js.value)";
                return js.value
            done),
        }done;
        
    cfn >>- maybe () do r :
            println "******** got finayl";
            rs.assure "\(r)" (r.a() == "adr1foo" 
                              and r.b() == "adr2foo");
        done;
done,


