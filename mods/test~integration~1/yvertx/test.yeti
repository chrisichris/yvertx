"eventbus:replyOfReplyOfReply" : do rs:
    _ = rs.assert is string -> boolean -> ();
    adr = "foo";
    msg = {msg = "message", for_json=E()};
    repl = {msg = "repl", for_json=E()};
    repl2 = {msg = "repl2", for_json=E()};
    repl3 = {msg = "repl3", for_json=E()};
    _ = registerBusHandler (Local adr) do {body, handlerId, request}:
        rs.assert "" (msg == body.stru);
        request repl (maybe () do {body, reply}:
            rs.assert "" (repl2 == body.stru);
            reply repl3;
            _ = unregisterBusHandler handlerId;
        done)
    done;

    prom is promise<'a> = sendToBusWithHandler adr msg; 
    prom >>- maybe () do {body,request}:
        rs.assert "" (body.stru == repl);
        request repl2 (maybe ()do {body}:
            rs.assure "" (body.stru == repl3);
        done)
    done;
done,

